apiVersion: cert-manager.io/v1
kind: ClusterIssuer
metadata:
  name: {{ item.value.name }}
spec:
  acme:
    email: {{ acme_email }}
    server: {{ item.value.server }}
    privateKeySecretRef:
      name: {{ secretKeyRef }}
    solvers:
      - dns01:
          cloudflare:
            email: {{ acme_email }}
            apiTokenSecretRef:
              name: {{ secretName }}
              key: {{ secretKeyRef }}
        selector:
          dnsZones:
          - {{ domain }}
